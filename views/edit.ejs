<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo App</title>
    <style>
      * {
        margin: 0%;
        padding: 0;
        box-sizing: border-box;
      }
      .container {
        width: 100%;
        min-height: 100vh;
        background: linear-gradient(135deg, #153677, #4e085f);
        padding: 10px;
      }

      .input-field {
        width: 100%;
        max-width: 550px;
        background: #fff;
        /* margin: 50px auto 20px; */
        padding: 10px 30px 50px;
        border-radius: 10px;
      }
      .input-field h2 {
        color: #002765;
        display: flex;
        align-items: center;
        margin-bottom: 20px;
      }
      button {
        border: none;
        outline: none;
        padding: 10px 30px;
        background: #ff5945;
        color: #fff;
        font-size: 15px;
        cursor: pointer;
        border-radius: 40px;
      }
    </style>

  </head>
  <body>
    <div class="container">
      <div class="input-field">
        <h2>Edit your Todo:</h2>

        <form method="post" action="/todos/<%=todo.id%>?_method=PATCH">
          <textarea name="todo" rows="5" cols="40" required id="text-box">
<%=todo.task%></textarea
          >
          <button onclick="updateTodo()">Submit</button>
        </form>
      </div>
    </div>

    <script>
      const inp = document.getElementById("text-box");
      function updateTodo() {
        if (inp.value === "") {
          return alert("you must write something!");
        }
      }
    </script>
  </body>
</html>
